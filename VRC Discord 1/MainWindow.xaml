<Window x:Class="VRC_Discord_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRC_Discord_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="222" Width="294">
    <Grid Margin="0,0,10,11">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="36,43,0,0" TextWrapping="Wrap" Text="VRC Discord Presence無効化設定" VerticalAlignment="Top" Width="180" Height="16"/>
        <Button Click="DisableClick"  Content="無効化" Margin="34,87,0,0" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="55"/>
        <Button Click="EnableClick" Content="再有効化" HorizontalAlignment="Left" Height="34" Margin="117,87,0,0" VerticalAlignment="Top" Width="77"/>
        <TextBlock x:Name="statusBlock" HorizontalAlignment="Left" Margin="40,142,0,0" TextWrapping="Wrap" Text="{Binding StatusText}" VerticalAlignment="Top" Height="16" Width="200"/>
        <TextBlock Margin="34,64,0,0" TextWrapping="Wrap" Text="現在：" VerticalAlignment="Top" Height="16" HorizontalAlignment="Left" Width="36"/>
        <TextBlock x:Name="currentStatus" Margin="78,64,0,0" TextWrapping="Wrap" Text="{Binding CurrentStatus}" VerticalAlignment="Top" Height="16"/>

    </Grid>
</Window>
